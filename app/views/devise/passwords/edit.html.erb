<div class="container mt-5">
  <h2>パスワード再設定</h2>
  <div class="row">
    <div class="col-8">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>
      <div class="form-group">
        <%= f.label :password, "新しいパスワード" %><br />
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %>文字以上に設定してください)</em><br />
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password",  class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation, "新しいパスワードの確認" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password",  class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit "パスワード変更", class:"btn btn-outline-primary" %>
      </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>